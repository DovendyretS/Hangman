<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/player_name"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAlignment="center"
        />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/galge"
        android:contentDescription="@string/galge" />

    <TextView
        android:id="@+id/word_to_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/indtast_bogstav"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

    <TableRow
        android:gravity="center"
        android:id="@+id/row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!-- Add elements/columns in the first row-->

        <Button
            android:id="@+id/b1_1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="A"
            android:onClick="checkLetter">
        </Button>
        <Button
            android:id="@+id/b1_2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="B"
            android:onClick="checkLetter">
        </Button>
        <Button
            android:id="@+id/b1_3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:onClick="checkLetter">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:id="@+id/b1_4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="D">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:id="@+id/b1_5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="E">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:id="@+id/b1_6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="F">

        </Button>
        <Button
            android:onClick="checkLetter"
            android:text="G"
            android:id="@+id/b1_7"
            android:layout_width="50dp"
            android:layout_height="wrap_content">
        </Button>

    </TableRow>

    <TableRow
        android:gravity="center"
        android:id="@+id/row2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="checkLetter"
            android:text="H"
            android:id="@+id/b1_8"
            android:layout_width="50dp"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:onClick="checkLetter"
            android:text="I"
            android:id="@+id/b2_1"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:text="J"
            android:id="@+id/b2_2"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:text="K"
            android:id="@+id/b2_3"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:text="L"
            android:id="@+id/b2_4"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:id="@+id/b2_5"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="M">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:id="@+id/b2_6"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="N">
        </Button>

    </TableRow>
    <TableRow
        android:gravity="center"
        android:id="@+id/row3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="checkLetter"
            android:text="O"
            android:id="@+id/b2_7"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:onClick="checkLetter"
            android:text="P"
            android:id="@+id/b2_8"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:onClick="checkLetter"
            android:text="Q"
            android:id="@+id/b3_1"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:text="R"
            android:id="@+id/b3_2"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:text="S"
            android:id="@+id/b3_3"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:text="T"
            android:id="@+id/b3_4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:onClick="checkLetter">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:text="U"
            android:id="@+id/b3_5"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>

    </TableRow>

    <TableRow
        android:gravity="center"
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:onClick="checkLetter"
            android:text="V"
            android:id="@+id/b3_6"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:text="W"
            android:id="@+id/b3_7"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:onClick="checkLetter"
            android:text="X"
            android:id="@+id/b3_8"
            android:layout_width="30dp"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:id="@+id/b4_1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:onClick="checkLetter"
            android:text="Y">

        </Button>

        <Button
            android:id="@+id/b4_2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:onClick="checkLetter"
            android:text="Z">

        </Button>

        <Button
            android:id="@+id/b4_3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:onClick="checkLetter"
            android:text="Æ">
        </Button>

        <Button
            android:id="@+id/b4_4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:onClick="checkLetter"
            android:text="Ø">
        </Button>
    </TableRow>
    <TableRow
        android:gravity="center"
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:onClick="checkLetter"
            android:text="Å"
            android:id="@+id/b5_1"
            android:layout_width="50dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:onClick="checkLetter"
            android:text=" "
            android:id="@+id/b5_2"
            android:layout_width="50dp"
            android:layout_height="wrap_content">
        </Button>
    </TableRow>
</TableLayout>


